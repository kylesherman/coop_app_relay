# Ensure package-lock.json is created with exact versions
package-lock=true
package-lock-only=false

# Use npm's legacy peer deps to avoid peer dependency issues
legacy-peer-deps=true

# Ensure consistent package installation
exact=true

# Disable package-lock.json generation for workspaces
workspaces-update=false

# Set the default registry
registry=https://registry.npmjs.org/
